<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"                   
                    xmlns:fa ="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp">





    <!--*******************************************************************************************************************************************************************************-->

    <!-- Colour Palettes -->
    
    <!-- Dark -->
    <Color x:Key="Primary" >#212121</Color>
    <SolidColorBrush x:Key="PrimaryBrush">#212121</SolidColorBrush>
    
    <!-- Light-->

    <Color x:Key="Secondary">#1db954</Color>
    <SolidColorBrush x:Key="SecondaryBrush">#1db954</SolidColorBrush>
    
    <!-- Darkest -->

    <Color x:Key="Menu">#121212</Color>
    <SolidColorBrush x:Key="MenuBrush">#121212</SolidColorBrush>
    
    <!-- Light -->

    <Color x:Key="Tertiary">#535353</Color>
    <SolidColorBrush x:Key="TertiaryBrush">#535353</SolidColorBrush>
    
    <!-- Foreground -->

    <Color x:Key="Foreground">#b3b3b3</Color>
    <SolidColorBrush x:Key="ForegroundBrush">#b3b3b3</SolidColorBrush>
    <!--*******************************************************************************************************************************************************************************-->



</ResourceDictionary>